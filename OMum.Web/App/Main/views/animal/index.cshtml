<div ng-controller="app.views.animalindex as vm">  
    <div class="command-list row">
        <div class="col-lg-12 text-left">          
            <button ng-click="vm.showNewAnimal()" class="btn btn-primary btn-raised"><i class="fa fa-asterisk"></i>新动物</button>
        </div>
    </div> 
    <br />
    <div class="bs-example table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>名称</th>
                    <th>创建人</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody ng-repeat="animal in vm.animals">
                <tr>
                    <td>1</td>
                    <td>{{animal.name}}</td>
                    <td>{{animal.creatorUserName}}</td>
                    <td>{{animal.creationTime}}</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
    <a ng-show="vm.totalAnimalCount>vm.animals.length" href="javascript:void(0)" ng-click="vm.showMore()" class="btn btn-default btn-lg btn-block withripple">更多<div class="ripple-wrapper"></div></a>
</div>