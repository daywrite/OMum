<div ng-controller="app.views.animalindex as vm">   
    <div class="bs-example table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>名称</th>
                    <th>创建人</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="animal in vm.animals">
                    <td>1</td>
                    <td>{{animal.name}}</td>
                    <td>{{animal.creatorUserName}}</td>
                    <td>{{animal.creationTime}}</td>
                    <td><a ng-href="#/animals/{{animal.id}}"><span>新增</span></a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>